{
  "name": "random-mst3k-o-matic",
  "productName": "The Random MST3K-O-Matic",
  "description": "The Random MST3K-O-Matic",
  "version": "0.2.0",
  "main": "main.js",
  "author": {
    "name": "Eriq Jaffe",
    "email": "eriqjaffe@gmail.com",
    "url": "https://github.com/eriqjaffe/random-mst3k-o-matic"
  },
  "license": "MIT",
  "repository": "https://github.com/eriqjaffe/random-mst3k-o-matic",
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "download": "^8.0.0",
    "github-version-checker": "^2.3.0",
    "sql.js": "^1.10.3"
  },
  "build": {
    "appId": "com.ootputilities.random-mst3k-o-matic",
    "files": [
      "!db/episodes.sqlite"
    ],
    "extraResources": [
      {
        "from": "db/episodes.sqlite",
        "to": "db/episodes.sqlite"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "writeUpdateInfo": false,
      "artifactName": "${productName}_${version}_macOS.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "portable": {
      "artifactName": "${productName}_${version}_Windows_portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "artifactName": "${productName}_${version}_Windows_setup.${ext}",
      "menuCategory": "OOTP Utilities",
      "shortcutName": "${productName}",
      "include": "build/installer.nsh",
      "uninstallDisplayName": "${productName} ${version}",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "differentialPackage": false
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "deb": {}
  }
}
